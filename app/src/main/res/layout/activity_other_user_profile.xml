<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OtherUserProfileActivity">

        <ImageView
                android:id="@+id/imageView_other_user_profile"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:scaleType="centerCrop"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/hill_top_sunset"/>

        <!--Gradient Overlay-->
        <ImageView
                android:id="@+id/imageView2_other_user_profile"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/gradient2_opacity"
                android:translationZ="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_other_user_profile"
                app:layout_constraintEnd_toEndOf="@+id/imageView_other_user_profile"
                app:layout_constraintStart_toStartOf="@+id/imageView_other_user_profile"
                app:layout_constraintTop_toTopOf="@+id/imageView_other_user_profile" />

        <!--Add photo button-->
        <Button
                android:id="@+id/photo_other_user_profile"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="160dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_image"
                android:textColor="#ffffff"
                android:translationZ="2dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView2_other_user_profile"
                app:layout_constraintHorizontal_bias="0.514"
                app:layout_constraintStart_toStartOf="@+id/imageView2_other_user_profile"
                app:layout_constraintTop_toTopOf="@+id/imageView2_other_user_profile"/>

        <Button
                android:id="@+id/message_button_other_user_profile"
                android:layout_width="202dp"
                android:layout_height="0dp"
                android:paddingRight="32dp"
                android:text="Message"
                android:textColor="#ffffff"
                android:background="@drawable/profile_buttons1"
                app:layout_constraintBottom_toBottomOf="@+id/photo_other_user_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2_other_user_profile"
                app:layout_constraintVertical_bias="1.0"/>

        <Button
                android:id="@+id/add_to_group_button_other_user_profile"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/profile_buttons1"
                android:paddingLeft="55dp"
                android:text="ADD TO GROUP"
                android:textColor="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/message_button_other_user_profile"
                app:layout_constraintTop_toBottomOf="@+id/imageView_other_user_profile"
                app:layout_constraintBottom_toBottomOf="@+id/message_button_other_user_profile"/>

        <TextView
                android:id="@+id/name_textView_other_user_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Name"
                android:gravity="center"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/photo_other_user_profile" />

        <TextView
                android:id="@+id/age_textView_other_user_profile"
                android:layout_width="202dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Age"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/location_textView_other_user_profile" />

        <TextView
                android:id="@+id/gender_textView_other_user_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:hint="Gender"
                android:inputType="textPersonName"
                app:layout_constraintBaseline_toBaselineOf="@+id/age_textView_other_user_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/age_textView_other_user_profile" />

        <TextView
                android:id="@+id/about_textView_other_user_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="About"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/age_textView_other_user_profile" />

        <TextView
                android:id="@+id/aboutInfo_textView_other_user_profile"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor
         incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation
         ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit
         in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat
          non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/about_textView_other_user_profile" />

        <TextView
                android:id="@+id/location_textView_other_user_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Location"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="@+id/name_textView_other_user_profile"
                app:layout_constraintStart_toStartOf="@+id/name_textView_other_user_profile"
                app:layout_constraintTop_toBottomOf="@+id/name_textView_other_user_profile" />

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:civ_border_width="4dp"
                app:civ_border_color="#ffffff"
                app:layout_constraintEnd_toEndOf="@+id/photo_other_user_profile"
                app:layout_constraintStart_toStartOf="@+id/photo_other_user_profile"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toTopOf="@+id/photo_other_user_profile"
                app:layout_constraintBottom_toBottomOf="@id/photo_other_user_profile"
                android:id="@+id/circle_image_view_other_user_profile"
                android:translationZ="3dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>