<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="395dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:id="@+id/cardView"
            app:layout_constraintHorizontal_bias="0.0"
            app:cardBackgroundColor="#403c42"
            app:cardCornerRadius="4dp" android:layout_marginTop="4dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="86dp"
            android:layout_height="83dp"
            app:civ_border_width="4dp"
            app:civ_border_color="#000000"

            android:id="@+id/circle_image_view_profile"
            app:layout_constraintEnd_toEndOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="@+id/cardView"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/cardView"
            android:translationZ="3dp"/>


    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_textView_profile_snippet_row_search" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/circle_image_view_profile"
            app:layout_constraintStart_toStartOf="@+id/circle_image_view_profile"
            app:layout_constraintEnd_toEndOf="@+id/circle_image_view_profile"
            android:translationZ="3dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16dp"/>
    <TextView
            android:text="Age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/age_textView_profile_snippet_row_search"
            app:layout_constraintTop_toBottomOf="@+id/name_textView_profile_snippet_row_search" app:layout_constraintEnd_toStartOf="@+id/name_textView_profile_snippet_row_search"
            android:layout_marginEnd="8dp"
            android:translationZ="3dp"
            android:gravity="center"
            android:textColor="#ffffff"/>
    <TextView
            android:text="Gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender_textView_profile_snippet_row_search"
            app:layout_constraintBaseline_toBaselineOf="@+id/age_textView_profile_snippet_row_search"
            app:layout_constraintStart_toEndOf="@+id/name_textView_profile_snippet_row_search"
            android:layout_marginStart="8dp"
            android:translationZ="3dp"
            android:gravity="center"
            android:textColor="#ffffff"/>
    <ImageButton
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/person3"
            android:id="@+id/imageButton2"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toTopOf="@+id/circle_image_view_profile"
            app:layout_constraintEnd_toEndOf="@+id/circle_image_view_profile"
            app:layout_constraintStart_toStartOf="@+id/circle_image_view_profile"
            app:layout_constraintBottom_toBottomOf="@+id/circle_image_view_profile"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"
            android:translationZ="3dp"/>
    <TextView
            android:text="Interests/about"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/interests_textView_profile_snippet_row_search" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/age_textView_profile_snippet_row_search"
            android:translationZ="3dp"
            app:layout_constraintEnd_toEndOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="@+id/cardView" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:textColor="#ffffff"/>

</androidx.constraintlayout.widget.ConstraintLayout>