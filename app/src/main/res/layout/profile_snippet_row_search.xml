<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_search">

    <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="205dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:id="@+id/cardView"
            app:layout_constraintHorizontal_bias="0.0"
            app:cardBackgroundColor="#6fffffff"
            app:cardCornerRadius="8dp" android:layout_marginTop="16dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="138dp"
            android:layout_height="138dp"
            app:civ_border_width="4dp"
            app:civ_border_color="#6900a2"

            android:id="@+id/circle_image_view_snippet_row"
            app:layout_constraintStart_toStartOf="@+id/cardView"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/cardView"
            android:translationZ="3dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.553"
            android:layout_marginStart="24dp"/>


    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_textView_profile_snippet_row_search"
            android:translationZ="3dp"
            android:gravity="left"
            android:textColor="#6900a2"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:textSize="16dp" app:layout_constraintStart_toEndOf="@+id/circle_image_view_snippet_row"
            android:layout_marginStart="24dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/circle_image_view_snippet_row"/>
    <TextView
            android:text="Age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/age_textView_profile_snippet_row_search"
            android:translationZ="3dp"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:textColor="#6900a2" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/location_textView_profile_snippet_row"
            app:layout_constraintStart_toStartOf="@+id/location_textView_profile_snippet_row"/>
    <TextView
            android:text="Gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/gender_textView_profile_snippet_row_search"
            app:layout_constraintBaseline_toBaselineOf="@+id/age_textView_profile_snippet_row_search"
            android:translationZ="3dp"
            android:paddingLeft="4dp"
            android:textStyle="bold"
            android:textColor="#6900a2"
            app:layout_constraintStart_toEndOf="@+id/age_textView_profile_snippet_row_search"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="@+id/cardView"
            android:layout_marginEnd="24dp"/>
    <TextView
            android:text="Interests/about"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/interests_textView_profile_snippet_row_search"
            android:translationZ="3dp"
            app:layout_constraintEnd_toEndOf="@+id/cardView"
            android:layout_marginEnd="24dp"
            android:textColor="#6900a2"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/age_textView_profile_snippet_row_search"
            app:layout_constraintStart_toStartOf="@+id/age_textView_profile_snippet_row_search"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="location"
            android:textColor="#6900a2"
            android:gravity="left"
            android:paddingLeft="4dp"
            android:textStyle="bold"
            android:translationZ="3dp"
            android:id="@+id/location_textView_profile_snippet_row"
            app:layout_constraintStart_toStartOf="@+id/name_textView_profile_snippet_row_search"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/name_textView_profile_snippet_row_search"
            app:layout_constraintEnd_toEndOf="@+id/cardView" android:layout_marginEnd="24dp"
            app:layout_constraintHorizontal_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>